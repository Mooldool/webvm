FROM --platform=i386 i386/debian:buster
ARG DEBIAN_FRONTEND=noninteractive
RUN apt-get clean && apt-get update && apt-get -y upgrade
RUN apt-get -y install apt-utils gcc \
	python3 vim-nox unzip \
	fakeroot dbus base whiptail \
	patch wamerican ucf manpages \
	file make dialog curl \
	less netcat-openbsd gzip wget \
        xinit 9wm
RUN useradd -m user && echo "user:password" | chpasswd
# We set WORKDIR, as this gets extracted by Webvm to be used as the cwd. This is optional.
WORKDIR /home/user/
# We set env, as this gets extracted by Webvm. This is optional.
ENV HOME="/home/user" TERM="xterm" USER="user" SHELL="/bin/bash" EDITOR="vim" LANG="en_US.UTF-8" LC_ALL="C"
RUN echo 'root:password' | chpasswd
RUN mkdir -p /home/user/launcher
RUN echo "cd /home/user/launcher; wget https://launcher.mojang.com/download/Minecraft.tar.gz; tar -xzf Minecraft.tar.gz" >> /home/user/install_launcher_source.sh
RUN echo "cd /home/user/launcher; wget https://launcher.mojang.com/download/Minecraft.deb; apt-get -y install ./Minecraft.deb" >> /home/user/install_launcher_deb.sh
RUN chmod +x /home/user/install_launcher_source.sh
RUN chmod +x /home/user/install_launcher_deb.sh
CMD [ "/bin/bash" ]
